import os, sys
from snek.snekclient import GameClient

GAME_HOME = SERVER_HOME = os.path.dirname( os.path.realpath(__file__) )

sys.path.append(GAME_HOME)


game = GameClient()
game.configure('game_home', GAME_HOME)
game.configure('server_home', SERVER_HOME)

game.start()




















